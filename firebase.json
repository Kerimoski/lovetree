{
  /* 
   * Firebase Yapılandırması
   * 
   * NOT: Mesajlaşma sistemi şu anda devre dışı bırakılmıştır.
   * Bu yapılandırma dosyası, mesajlaşma sistemi ileride tekrar 
   * etkinleştirildiğinde kullanılacaktır.
   */
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
} 